<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="providers-lookup.json" />
    <None Remove="registered-providers.json" />
    <None Remove="standards-lookup.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="providers-lookup.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="registered-providers.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="standards-lookup.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WireMock.Net" Version="1.5.5" />
    <PackageReference Include="WireMock.Net.StandAlone" Version="1.5.5" />
  </ItemGroup>

</Project>
